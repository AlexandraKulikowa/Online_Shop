@model Comparison

@if (Model == null || !Model.Products.Any())
{
    <br />
    @await Html.PartialAsync("Search")
    <div class="order"><h2><b>Вы пока не добавили товары для сравнения! Вернитесь на главную страницу...</b></h2></div>
}
else
{
    @await Html.PartialAsync("Search")
    <div class="row comparecard">
        @foreach (var product in Model.Products)
        {
            <div class="col-4 card-shadow border-success comparelist table-responsive">
                <br>
                <center><img src=@product.ImagePath alt="Фото картины" height="200"></center>
                <br>
                <table class="table-compare" style="margin-right:auto;margin-left:0px">
                    <tr>
                        <th class="bg-success" height="50px">@product.Name</th>
                    </tr>
                    <tr><td height="70px">@product.Description</td></tr>
                    <tr><td>Жанр: @product.Genre</td></tr>
                    <tr><td>Техника: @product.PaintingTechnique</td></tr>
                    <tr><td>Размер: @product.Size</td></tr>
                    <tr><td>@product.Year год</td></tr>
                    @if (product.IsPromo == true)
                    {
                        <tr class="table-warning"><td height="45px">Акция на товар!</td></tr>
                    }
                    else
                    {
                        <tr><td height="45px"></td></tr>
                    }
                    <tr><td>@product.Cost рублей</td></tr>
                </table>
                <div class="btn-group" role="group">
                    <a class="btn btn-outline-secondary mt-auto" asp-controller="compare" asp-action="delete" asp-route-id=@product.Id role="button">Удалить из сравнения</a>
                    <a class="btn btn-danger mt-auto" asp-controller="favourite" asp-action="add" asp-route-id=@product.Id role="button">В избранное</a>
                    <a class="btn btn-success mt-auto" asp-controller="basket" asp-action="add" asp-route-id=@product.Id role="button">Добавить в корзину</a>
                </div>
            </div>
        }
    </div>
    <a class="btn btn-lg col-12 btn-outline-dark" asp-controller="compare" asp-action="clear" asp-route-userId=@Model.UserId role="button">Очистить страницу</a>
}