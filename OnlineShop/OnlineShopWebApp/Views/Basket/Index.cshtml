@model List<SumProducts>

@if (Model.Count == 0)
{
    <h1><b>Ваша корзина пуста!</b></h1>
}
<table>
    <thead>Ваша корзина</thead>
    <tr>
        <th>Названия</th>
        <th>Количество товара</th>
        <th>Стоимость</th>
    </tr>
    @{
        decimal totalcost = 0;
    }
    @foreach (SumProducts item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.NumberOfProducts</td>
            <td>@item.Cost</td>
        </tr>
        totalcost += item.Cost;
    }
    <tr>
        <th colspan="3">Итоговая сумма заказа @totalcost</th>
    </tr>
</table>
<a class="btn btn-success col-md-3 btn-lg" href="#" role="button">Оформить заказ</a>