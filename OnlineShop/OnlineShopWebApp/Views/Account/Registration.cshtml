@model RegistrationViewModel
<center><b><div class="validation" asp-validation-summary="All" style="color:aliceblue"></div></b></center>
<div class="card shadow register">
    <form method="post">
        <fieldset>
            <h4><legend>Приветствуем вас на нашем сайте! Зарегистрируйтесь</legend></h4>
            <p>
                <label asp-for="Surname">Фамилия</label>
                <input class="form-ctrlplus text-lg-center" type="text" asp-for="Surname" placeholder="Иванов" autofocus>
                <label asp-for="Name">Имя</label>
                <input class="form-ctrlplus text-lg-center" type="text" asp-for="Name" placeholder="Иван">
                <label asp-for="Fathername">Отчество</label>
                <input class="form-ctrlplus text-lg-center" type="text" asp-for="Fathername" placeholder="Иванович">
            </p>
            <p>
                <b><span style="color:brown" asp-validation-for="Surname"></span></b>
                <b><span style="color:brown" asp-validation-for="Name"></span></b>
                <b><span style="color:brown" asp-validation-for="Fathername"></span></b>
            </p>
            <p>
                <label asp-for="Login">Логин</label>
                <input class="form-ctrl text-lg-center" type="text" placeholder="Логин" asp-for="Login">
                <label asp-for="Password">Пароль</label>
                <input class="form-ctrl text-lg-center" type="password" asp-for="Password">
                <label asp-for="ConfirmPassword">Подтвердите пароль</label>
                <input class="form-ctrl text-lg-center" type="password" asp-for="ConfirmPassword">
            </p>
            <p>
                <b><span style="color:brown" asp-validation-for="Login"></span></b>
                <b><span style="color:brown" asp-validation-for="Password"></span></b>
                <b><span style="color:brown" asp-validation-for="ConfirmPassword"></span></b>
            </p>
            <p>
                <label asp-for="Email">Е-mail</label>
                <input class="form-ctrl text-lg-center" type="email" asp-for="Email" placeholder="anna@yandex.ru">
                <label asp-for="Phone">Телефон</label>
                <input class="form-ctrl text-lg-center" id="phone" type="tel" asp-for="Phone" pattern="\+7\([0-9]{3}\)-[0-9]{3}\-[0-9]{2}\-[0-9]{2}" placeholder="+7(999)-999-99-99">
                <br>
            </p>
            <p>
                <b><span style="color:brown" asp-validation-for="Email"></span></b>
                <b><span style="color:brown" asp-validation-for="Phone"></span></b>
            </p>
            <input asp-for="isDistribution" type="checkbox" value="true">
            <label asp-for="isDistribution">Присылать мне уведомления о новинках</label>

            <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />

        </fieldset>
        <center><button type="submit" class="btn button-register" asp-controller="account" asp-action="register" asp-route-returnUrl="@Model.ReturnUrl" role="button">Зарегистрироваться</button></center>
    </form>
</div>

@section Scripts{
    <script>
        $(function () {
            $("#phone").mask("+7(999) 999-99-99");
        });
    </script>
    }