@model List<Product>

<body>
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-3 card shadow border-success">
                <div class="card-body" style="display:flex; flex-direction:column;">
                    <img src=@product.ImagePath alt="Фото картины">
                    <div class="mt-auto" style="display:-ms-inline-flexbox; flex-direction: column;">
                        <a href="/product/index/@product.Id">
                            <h5><b>@product.Name</b></h5>
                        </a>
                        <a style="color:saddlebrown">
                            <b>@product.Cost рублей</b><br>
                        </a>
                    </div>
                    <br>
                    <a class="btn btn-dark btn-lg mt-auto" href="/home/compare?productId=@product.Id&userId=@ViewBag.UserId" role="button">Сравнить</a>
                    <a class="btn btn-success btn-lg mt-auto" href="/basket/add?productId=@product.Id" role="button">Добавить в корзину</a>
                </div>
            </div>
        }
    </div>
</body>