<div class="card shadow login">
    <form class="form" action="#" autocomplete="on" method="post">
        <div class="gy-1">
            <fieldset>
                <legend>Авторизируйтесь</legend>
            <input class="form-ctrl" type="text" name="login" size="25" minlength="4" maxlength="12" placeholder="Логин" required>
            <br>
            <input class="form-ctrl" type="password" name="password" size="25" minlength="6" maxlength="12" placeholder="Пароль" required>
            <br>
            <input name="isremember" type="checkbox" value="true">
            <label for="isremember">Запомнить меня?</label>
            </fieldset>
        </div>
        <button type="submit" class="btn button-login" asp-area="" asp-controller="login" asp-action="enter" role="button">Войти</button>
        <br />
        <button class="btn button-registration" asp-area="" asp-controller="enter" asp-action="registration" role="button">Регистрация нового пользователя</button>
    </form>
</div>