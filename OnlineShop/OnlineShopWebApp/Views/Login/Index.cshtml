@model Authorization

<div class="card shadow login">
    <form class="form" autocomplete="on" method="post">
        <fieldset>
            <legend><center>Авторизируйтесь</center></legend>

            <label asp-for="Login">Логин</label>
            <input class="form-ctrl" type="text" placeholder="Логин" asp-for="Login">
            <br />
            <span asp-validation-for="Login"></span>
            <br>

            <label asp-for="Password">Пароль</label>
            <input class="form-ctrl" type="password" placeholder="Пароль" asp-for="Password">
            <br />
            <span asp-validation-for="Password"></span>
            <br>

            <input name="isremember" type="checkbox" value="true">
            <label for="isremember">Запомнить меня?</label>
        </fieldset>
        <button type="submit" class="btn button-login" asp-controller="login" asp-action="enter" role="button">Войти</button>
        <br />
        <button class="btn button-registration" asp-controller="login" asp-action="registration" role="button">Регистрация нового пользователя</button>
    </form>
</div>