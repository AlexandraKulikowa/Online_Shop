@model List<User>

@await Html.PartialAsync("AdminPanel")

@if (!Model.Any() || Model is null)
{
    <div class="card shadow adminproducts">
        <center><h2>Список пользователей</h2></center>
        <div class="text-dark">На сайте не зарегистрировано ни одного пользователя.</div>
        <a class="btn btn-dark btn-lg" asp-area="" asp-controller="login" asp-action="registration" role="button">Добавить пользователя</a>
    </div>
}
else
{
    <div class="card shadow adminproducts">
        <center><h2>Список пользователей</h2></center>    
        <table>
            <thead>
                <tr>
                    <th>№</th>
                    <th>Имя</th>
                    <th>Фамилия</th>
                    <th>Логин</th>
                    <th>Телефон</th>
                </tr>
            </thead>
            @foreach (var user in Model)
            {
                <tbody>
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Name</td>
                        <td>@user.Surname</td>
                        <td>@user.Login</td>
                        <td>@user.Phone</td>
                        <td><a class="btn btn-dark" asp-area="admin" asp-controller="user" asp-action="details" asp-route-id="@user.Id" role="button">Детали</a></td>
                    </tr>
                </tbody>
            }
        </table>
        <br>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-dark btn-lg" asp-area="" asp-controller="login" asp-action="registration" role="button">Добавить пользователя</a>
        </div>
    </div>
}