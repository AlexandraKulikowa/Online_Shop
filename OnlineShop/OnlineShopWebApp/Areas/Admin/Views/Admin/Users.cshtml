@model List<User>

@await Html.PartialAsync("AdminPanel")

@if ((bool)!Model?.Any())
{
    <div class="card shadow adminproducts">
        <center><h2>Список пользователей</h2></center>
        <div class="text-dark">На сайте не зарегистрировано ни одного пользователя.</div>
    </div>
}
else
{
    <div class="card shadow adminproducts">
        <center><h2>Список пользователей</h2></center>    <table>
            <thead>
                <tr><th>№</th><th>Имя</th><th>Фамилия</th><th>Логин</th><th>Телефон</th></tr>
            </thead>
            @foreach (var user in Model)
            {
                <tbody>
                    <tr><td>@user.Id</td><td>@user.Name</td><td>@user.Surname</td><td>@user.Login</td><td>@user.Phone</td></tr>
                    <a class="btn btn-primary" asp-area="admin" asp-controller="admin" asp-action="userdetails" asp-route-id="@user.Id" role="button">Детали</a>
                </tbody>
            }
        </table>
       
    </div>
}